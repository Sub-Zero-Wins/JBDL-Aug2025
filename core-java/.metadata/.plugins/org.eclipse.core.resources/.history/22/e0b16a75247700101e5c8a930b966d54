package loops;

import java.util.Arrays;
import java.util.List;

public class Demo1 
{
	public static void main(String[] args) 
	{
		
		for(int i = 0; i <=4 ;i++) {
			
			for(int j = 0; j <=i ;j++) {
				System.out.print("*");
				
			}
			System.out.println();
			
		}
		
		int x=0;// initialization
		while(x<4)//condition {
			System.out.print("*");
			x++; //updation
		}
	
	    List a= Arrays.asList(1,2,3,4);
		
		
		
		
	}

}
