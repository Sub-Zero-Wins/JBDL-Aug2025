package multithreading;


class BookTicket implements Runnable
{
	int seatNumber=3;
	
	public synchronized void bookSeat() throws InterruptedException
	{
		System.out.println(Thread.currentThread().getName()+" has selected seat : "+seatNumber);
		Thread.sleep(2000);
		System.out.println(Thread.currentThread().getName()+" is making payment for : "+seatNumber);
		Thread.sleep(2000);
		System.out.println(Thread.currentThread().getName()+" payment successful booked :"+seatNumber);		
		seatNumber=seatNumber-1;
	}
	
	public void run()
	{
		try {
			bookSeat();
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}

public class TicketBookingDemo 
{
	
	public static void main(String[] args)
	{
		BookTicket user1=new BookTicket();
		user1.setName("Saqib");
		BookTicket user2=new BookTicket();
		user2.setName("Rushda");
		BookTicket user3=new BookTicket();
		user3.setName("Syed");
		
		user1.start();
		user2.start();
		user3.start();
	}
	
	

}
