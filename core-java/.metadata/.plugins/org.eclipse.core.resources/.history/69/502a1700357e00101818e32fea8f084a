package abstraction;

public class Airport 
{
	public static void main(String[] args) 
	{
		Plane p;
		
		p = new FighterPlane(); // upcasting/loose coupling code reusability
		controlPlane(p);
		
		FighterPlane fp =(FighterPlane)p;
		
		
		p = new CargoPlane();
		controlPlane(p);
		
		
		
	}
	
	public static void controlPlane(Plane p) 
	{
		p.takeOff();
		p.land();	
		
		if(p instanceof FighterPlane){
			 ((FighterPlane)(p)).carryWeapons(); // downcasting to access special methods of child object
		}
		else {
			 ((CargoPlane)(p)).carryGoods();
		}
		
	}

}
